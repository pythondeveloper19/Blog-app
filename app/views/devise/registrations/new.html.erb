<div class="row">
<div class="box col-md-3" style="height:546px;overflow:auto;">
  <div class="page-header" style="border-bottom: 1px solid #999999 !important">
    <h2>Sign up <small></small></h2>
  </div>
  <%= form_for(resource, :as => resource_name, :multipart => true,:url => registration_path(resource_name), :role => "form") do |f| %>
    <%#= devise_error_messages! %>
    <%resource.errors.full_messages.each do |error_msg| %>
       <div class="alert alert-danger"><%= error_msg%><button type="button" class="close" data-dismiss="alert" aria-hidden="true" style="margin-right:15px;">&times;</button></div>
    <%end%>
  <!--
    <div><%= f.label :email %><br />
  -->
    <div class="form-group">
      <label for="exampleInputEmail1">Full Name</label>
      <%= f.text_field :name, :autofocus => true, :style =>"height:34px;" ,:class => "form-control" ,:placeholder => "Enter Full Name" ,:autocomplete=>"off"%>
    </div>
    <div class="form-group">
      <label for="exampleInputEmail1">Email address</label>
      <%= f.email_field :email, :autocomplete=>"off", :style =>"height:34px;" ,:class => "form-control" ,:placeholder => "Enter email" %>
    </div>
  <!--
    <div><%= f.label :password %><br />
  -->
    <div class="form-group">
      <label for="exampleInputPassword1">Password</label>
      <%= f.password_field :password, :style =>"height:34px;", :class => "form-control" ,:placeholder => "Password"%>
    </div>

  <!--
    <div><%= f.label :password_confirmation %><br />
  -->
    <div class="form-group">
      <label for="exampleInputPassword1">Password Confirmation</label>
      <%= f.password_field :password_confirmation, :style =>"height:34px;", :class => "form-control" ,:placeholder => "Password" %>
    </div>
    <%= f.hidden_field :user_type,:value=>"blogger"%>
<!--
    <div class="form-group">
      <label for="exampleInputPassword1">Upload Profile Picture</label>
      <%#= f.file_field :avatar%>
      <input type="file" name="file" id="photo_file" accept="image/*"><br/>
    </div>
-->
    <br />
    <div><%= f.submit "Sign up" ,:class=>"btn btn-default"%></div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
<%=render :partial => "devise/sessions/slider"%>
</div>
