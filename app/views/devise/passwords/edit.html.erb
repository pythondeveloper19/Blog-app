<div class="box page-header">
  <h2>Change your password <small></small></h2>
</div>
<div class="box">
<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
  <%resource.errors.full_messages.each do |error_msg| %>
     <div class="alert alert-danger"><%= error_msg%><button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button></div>
  <%end%>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-group">
		<label for="exampleInputEmail1">New password</label>
    <%= f.password_field :password, :autofocus => true, :style =>"height:34px;width:500px;", :class => "form-control" ,:placeholder => "Password" %></div>
  </div>
  <div><%= f.label :password_confirmation, "Confirm new password" %><br />
  <%= f.password_field :password_confirmation %></div>
  <div class="form-group">
		<label for="exampleInputEmail1">Confirm new password</label>
    <%= f.password_field :password_confirmation, :style =>"height:34px;width:500px;", :class => "form-control" ,:placeholder => "Password" %></div>
  </div>
  <div><%= f.submit "Change my password",:class=>"btn btn-default" %></div>
<% end %>
<%= render "devise/shared/links" %>
</div>
